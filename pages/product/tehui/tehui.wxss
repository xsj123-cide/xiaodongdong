
	.title{
		width: 100%;
		height: 80rpx;
		display: flex;
		flex-direction: row;
		align-items: center;
		border-bottom: 1px solid #DCDCDC;
	}
	.titleItem{
		width: 50%;
		height: 80rpx;
		line-height: 80rpx;
		font-size: 28rpx;
		text-align: center;
		position: relative;
	}
	.borderRight{
		/* border-right: 1px solid #DCDCDC; */
	}
	.borderRight::before{
		content: "";
		height: 40rpx;
		position: absolute;
		right: 0;
		top: 50%;
		transform: translateY(-50%);
		border: 1px solid #DCDCDC;
	}
	.active{
	}
	.active::after{
		content: "";
		width: 50rpx;
		border: 1px solid #72C7FF;
		position: absolute;
		bottom: 5rpx;
		left: 50%;
		transform: translateX(-50%);
	}
	.crazy{
		display: flex;
		flex-direction: row;
		align-items: center;
		padding: 30rpx 20rpx;
		padding-right: 0;
		border-bottom: 1px solid #DCDCDC;
	}
	.crazyImg{
		width: 200rpx;
		height: 180rpx;
		margin: 0 20rpx;
	}
	.crazyText{
		width: 450rpx;
		font-size: 26rpx;
		margin-bottom: 15rpx;
		
		overflow : hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
	}
	.crazySlider{
		display: flex;
		flex-direction: row;
		align-items: center;
		font-size: 22rpx;
		margin-bottom: 20rpx;
	}
	.greySlider{
		width:312rpx;
		height:12rpx;
		background:rgba(236,236,236,1);
		border-radius:6rpx;
		margin-right: 20rpx;
	}
	.redSlider{
		width:0;
		height:12rpx;
		background:red;
		border-radius:6rpx;
	}
	.red{
		color: red;
	}
	.price1{
		font-size: 26rpx;
	}
	.number1{
		font-size: 30rpx;
		margin-right: 20rpx;
		font-weight: bold;
	}
	.number2{
		color: #999999;
		font-size: 26rpx;
		text-decoration:line-through;
	}
	.crazyButton{
		position: absolute;
		right: 30rpx;
		
		width:156rpx;
		height:58rpx;
		line-height: 58rpx;
		text-align: center;
		color: white;
		font-size: 26rpx;
		background:rgba(255,23,23,1);
		border-radius:29px;
	}
	.crazyBottom{
		margin-top: 15rpx;
		text-align: center;
		color: #999999;
		font-size: 26rpx;
	}
	.crazyTime{
		margin-top: 15rpx;
		display: flex;
		flex-direction: row;
		align-items: center;
		font-size: 24rpx;
	}
	.timeRight{
		display: flex;
		flex-direction: row;
		margin-left: 20rpx;
		color: #FF5151;
		font-size: 24rpx;
	}
	.timeItem{
		color: white;
		width: 40rpx;
		text-align: center;
		background-color: #FF5151;
	}