.scroll1 {
	height: 100vh;
	background-color:#F5F5F5;
}
.back{
	width: 100%;
	height: 240rpx;
	background-color: #87CEFA;
	position: absolute;
	top: 0;
}
.backDiv{
	padding: 10rpx 30rpx;
}
.backInputDiv{
	width: 670rpx;
	height: 50rpx;
	line-height: 50rpx;
	background:rgba(241, 241, 241, 0.52);
	border-radius: 25rpx;
	display: flex;
	flex-direction: row;
	padding: 0 30rpx;
}
.backInput{
	width: 550rpx;
	height: 50rpx;
	line-height: 50rpx;
	margin-left: 10rpx;
	font-size: 26rpx;
}
.sousuo{
	padding: 15rpx 30rpx;
	padding-right: 5rpx;
	margin-top: 100rpx;
}
.sousuoTitle{
	font-size: 30rpx;
	margin-bottom: 20rpx;
	font-weight:400;
}
.sousuoDiv{
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.sousuoItem1{
	padding: 2px 10px;
	font-size: 24rpx;
	color: #525252;
	background-color: #DCDCDC;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	margin-right: 15rpx;
}
.shangqu{
	white-space: nowrap;
	overflow-y:auto;
	margin-bottom: 20rpx;
}
.shangqu::-webkit-scrollbar{
    display: none;
}
.shangquItem{
	margin-right: 15rpx;
	display: inline-block;
}
.shangquImg{
	width:235rpx;
	height:110rpx;
	border-radius:5rpx;
}
.shangquText{
	font-size: 24rpx;
	font-weight:400;
}
.tuijian{
	width: 100%;
	padding: 0 20rpx;
	margin-top: 130rpx;
}
.item{
	width: 100%;
	margin-top: 20rpx;
	padding-bottom: 10rpx;
	border-radius: 10rpx;
	background-color: white;
}
.itemImg1{
	width: 100%;
	height: 315rpx;
	border-radius: 10rpx;
}
.itemTitle{
	font-size: 26rpx;
	color: #999999;
	display: flex;
	flex-direction: row;
	align-items: center;
	position: relative;
	margin-top: 10rpx;
}
.itemTitleRight{
	display: flex;
	flex-direction: row;
	position: absolute;
	right: 0;
}
.itemBorder1{
	padding-left: 10rpx;
	border-left: 3px solid #72C8FF;
}
.itemBorder2{
	border-right: 1rpx solid #999999;
	margin: 0 8rpx;
}
.itemInfo{
	width: 100%;
	font-size: 28rpx;
	line-height: 40rpx;
	padding: 0 15rpx;
	margin-top: 10rpx;
	
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.itemDiv1{
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 0 15rpx;
	margin:10rpx 0;
}
.itemPrice{
	font-size: 28rpx;
	color: #FF0000;
}
.itemButton{
	width: 140rpx;
	height: 45rpx;
	line-height: 45rpx;
	text-align: center;
	color: white;
	background-color: #FF5151;
	font-size: 26rpx;
	position: absolute;
	right: 5%;
	border-radius: 10rpx;
}
.bottomText{
	font-size: 22rpx;
	color: #999999;
	text-decoration:line-through;
}
.bottomText1{
	font-size: 22rpx;
	color: #999999;
	position: absolute;
	right: 5%;
}