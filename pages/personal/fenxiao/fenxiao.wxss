
	.view{
		width: 100%;
		min-height: 100vh;
		background-color: #F5F5F5;
	}
	.viewItem{
		width: 100%;
		margin-top: 10px;
	}
	.itemTop{
		display: flex;
		flex-direction: row;
	}
	.itemLeft{
		width: 15%;
		text-align: center;
		font-size: 24rpx;
		color: white;
		background-color: #72C8FF;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.backGrey{
		background-color: #999999;
	}
	.colorGrey{
		color: #999999;
	}
	.itemRight{
		width: 85%;
		padding: 20rpx;
		font-size: 22rpx;
		background-color: white;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}
	.marginBottom{
		margin-bottom: 10rpx;
	}
	.marginRight{
		margin-right: 20rpx;
	}
	.itemPrice{
		color: red;
		font-size: 30rpx;
		margin-right: 70rpx;
	}
	.itemButton{
		width: 42rpx;
		height: 42rpx;
		line-height: 42rpx;
		text-align: center;
		font-size: 24rpx;
		border-radius: 100%;
		color: #999999;
		border: 1px solid #999999;
		position: absolute;
		right: 15rpx;
	}
	.itemBottom{
		font-size: 22rpx;
		padding: 20rpx;
		background-color: white;
		display: flex;
		flex-direction: row;
		align-items: center;
	}
	.bottomImg{
		width: 80rpx;
		height: 80rpx;
		margin-right: 15rpx;
		border-radius: 10rpx;
	}
	.borderBottom{
		border-bottom: 1px solid #F5F5F5;
	}