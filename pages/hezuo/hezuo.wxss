
	.first{
		display: flex;
		flex-direction: row;
		justify-content: space-around;
		padding: 0 70rpx;
		margin: 30rpx 0;
		font-size: 26rpx;
	}
	.firstItem{
		width: 130rpx;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.firstNumber{
		width: 42rpx;
		height: 42rpx;
		line-height: 42rpx;
		text-align: center;
		font-size: 22rpx;
		border-radius: 100%;
		margin-bottom: 15rpx;
		color: #A9A9A9;
		background-color: #D3D3D3;
		
		position: relative;
	}
	.active{
		color: white;
		background-color: #72C8FF;
	}
	.borderRight{
	}
	.borderRight::after{
		content: "";
		width: 135rpx;
		border: 1rpx solid #D3D3D3;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		right: -150rpx;
	}
	.title{
		padding: 20rpx 30rpx;
		font-size: 26rpx;
		color: #A9A9A9;
	}
	.inputView{
		font-size: 26rpx;
		padding-left: 30rpx;
		border-top: 1px solid #DCDCDC;
		border-bottom: 1px solid #DCDCDC;
	}
	.inputItem{
		display: flex;
		flex-direction: row;
		align-items: center;
		padding: 20rpx 0;
	}
	.borderBottom{
		border-bottom: 1px solid #DCDCDC;
	}
	.input1{
		color: #A9A9A9;
		width: 500rpx;
		margin-left: 20rpx;
	}
	.textarea{
		width: 95%;
		padding: 20rpx;
		box-sizing: border-box;
		font-size: 26rpx;
		margin: 0 auto;
		position: relative;
		border-radius: 10rpx;
		border: 1px solid #DCDCDC;
	}
	.number1{
		color: #A9A9A9;
		position: absolute;
		right: 20rpx;
		bottom: 20rpx;
	}
	.bottom{
		margin-top: 50rpx;
	}
	.button1{
		width: 88%;
		height: 70rpx;
		line-height: 70rpx;
		text-align: center;
		font-size: 26rpx;
		color: white;
		background-color: #72C8FF;
		margin: 0 auto;
		margin-top: 20rpx;
		border-radius: 10rpx;
	}
	.button2{
		width: 88%;
		height: 70rpx;
		line-height: 70rpx;
		text-align: center;
		font-size: 26rpx;
		color: #72C8FF;
		margin: 0 auto;
		margin-top: 20rpx;
		border-radius: 10rpx;
		border: 1px solid #72C8FF;
	}
	.group{
		display: flex;
		flex-direction: row;
		align-items: center;
		margin-left: 20rpx;
	}
	.marginLeft{
		margin-left: 20rpx;
	}
	.inputText{
		min-width: 100rpx;
	}